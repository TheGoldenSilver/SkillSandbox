@model List<SkillSandbox.Models.Assessment>
@{
    ViewData["Title"] = "Available Assessments";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Available Assessments</h1>
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> Complete these assessments to track your progress and demonstrate your skills.
            </div>
        </div>
    </div>

    <div class="row">
        @foreach (var assessment in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">@assessment.Title</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong>Questions:</strong> @assessment.Questions?.Count ?? 0
                        </p>
                        <p class="card-text">
                            <strong>Created:</strong> @assessment.CreatedAt.ToString("MMM dd, yyyy")
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <i class="fas fa-clock"></i> Estimated time: 30-45 minutes
                            </small>
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a asp-action="TakeAssessment" asp-route-id="@assessment.Id" 
                           class="btn btn-primary w-100">
                            <i class="fas fa-play"></i> Start Assessment
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> No assessments are currently available.
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Add any JavaScript functionality here
    </script>
} 