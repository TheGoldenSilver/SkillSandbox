@model SkillSandbox.Models.ApplicationUser
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Welcome, @Model.FirstName @Model.LastName!</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h4>Your Profile</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-4">Email</dt>
                                <dd class="col-sm-8">@Model.Email</dd>
                                
                                <dt class="col-sm-4">Member Since</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h4>Quick Actions</h4>
                            <hr />
                            <div class="d-grid gap-2">
                                <a asp-controller="Assessment" asp-action="Index" class="btn btn-outline-primary">View Assessments</a>
                                <a href="#" class="btn btn-outline-success">View Skills</a>
                                <a href="#" class="btn btn-outline-info">View Progress</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 